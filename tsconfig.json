{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "rootDir": "/",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}